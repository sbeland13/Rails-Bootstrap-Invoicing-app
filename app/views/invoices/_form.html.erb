<div class="col-xs-12">
<%= simple_form_for(@invoice) do |f| %>
  <div id="invoice-wrap">

  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <h3 class="page-header">Create a New Invoice<small class="pull-right"></small></h3>
    </div>
  </div>


  <div class="row_invoice-info">
    <div class="col-xs-4 invoice-col">
      From
     <address>
     <%= f.input_field :company, class: "form-control" %>
     <input class="form-control" placeholder="address line 1" />
     <input class="form-control" placeholder="address line 2" />
     <input class="form-control" placeholder="phone number" />
     </address>
    </div>
    <div class="col-xs-4 invoice-col">
     To
     <address>
       <%f.input_field :contragent, class: "form-control" %>
       <input class="form-control" placeholder="address line 1" />
       <input class="form-control" placeholder="address line 2" />
       <input class="form-control" placeholder="phone number" />
     </address>
     </div>
     <div class="col-xs-4 invoice-col">
     <form class="form-horizontal">
     <div class="form-group">
    <div class="col-xs-4"><%= f.label :amount %></div>
    <div class="col-xs-8"><%= f.input_field :amount, class: 'form-control' %></div>
  </div>
   <div class="form-group">
     <div class="col-xs-4"><%= f.label :company %></div>
    <div class="col-xs-8"><%= f.input_field :company, class: 'form-control' %></div>
  </div>
   <div class="form-group">
     <div class="col-xs-4"><%= f.label :contragent %></div>
    <div class="col-xs-8"><%= f.input_field :contragent, class: 'form-control' %></div>
  </div>
   <div class="form-group">
     <div class="col-xs-4"><%= f.label :currency %></div>
    <div class="col-xs-8"><%= f.input_field :currency, class: 'form-control' %></div>
   </div>
   <div class="form-group">
     <div class="col-xs-4"><%= f.label :date %></div>
    <div class="col-xs-8"><%= f.input_field :date, class: 'form-control datepicker', as: :string %></div>
  </div>
  </form>
</div>
   <div class="row">
   <div class="col-xs-12 pull-left">
     
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
    </div>
    </div>
  
  </div>
  </div>
<% end %>
</div>

